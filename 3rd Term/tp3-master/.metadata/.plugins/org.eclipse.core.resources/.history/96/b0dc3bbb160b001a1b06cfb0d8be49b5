package modele;

import java.awt.Point;
import java.util.Set;

import javafx.scene.paint.Color;

public class Mangeuse extends Particule
{

	public Mangeuse(Point pPos, double pVitesse, double pAngleDep,
			double pRayon, Color pCouleur, Point pZone,
			Set<Particule> environementPart)
	{
		super(pPos, pVitesse, pAngleDep, pRayon, pCouleur, pZone,
				environementPart);
	}

	@Override
	public void handleCollision(Particule pPart)
	{
		if (pPart instanceof Rebondissante && getRayon() > pPart.getRayon())
		{
			manger(pPart);
		}
		else
			rebond(pPart);
	}

	private void manger(Particule pPart)
	{
		setRayon(getRayon() + 1);
		environementPart.remove(pPart);
	}

}
